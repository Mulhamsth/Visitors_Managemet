@page "/visitors"
@inject IVisitorsService visitorsservice

<h3>Visitors</h3>
<table class="table">
	<thead>
		<tr>
			<td>VisitorId</td>
			<td>First Name</td>
			<td>Last Name</td>
			<td>City</td>
			<td>Birth Day</td>
			<td>Email</td>
			<td>Phone Number</td>
		</tr>
	</thead>
	<tbody>
		@foreach (visitor v in VisitorList)
		{
			<tr>
				<td>@v.VisitorId</td>
				<td>@v.first_name</td>
				<td>@v.last_name</td>
				<td>@v.city</td>
				<td>@v.birth_day</td>
				<td>@v.email</td>
				<td>@v.phone_number</td>
			</tr>
		}
	</tbody>
</table>

@code {
	public List<visitor> VisitorList{ get; set; }
	protected override void OnInitialized()
	{
		VisitorList = visitorsservice.GetVisitors();
	}
}
